<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dawnstep.codemonkey"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:name="com.dawnstep.codemonkey.CodeMonkeyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dawnstep.codemonkey.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.dawnstep.codemonkey.service.CodeMonkeyService"
            android:enabled="true" >
        </service>

        <activity
            android:name="com.dawnstep.codemonkey.news.NewsShowActivity"
            android:label="@string/title_activity_news_show" >
        </activity>
        <activity
            android:name="com.dawnstep.codemonkey.ContactUsActivity"
            android:label="@string/title_activity_contact_us" >
        </activity>
        <activity
            android:name="com.dawnstep.codemonkey.discovery.newskillget.NewSkillGetKindActivity"
            android:label="@string/title_activity_new_skill_get_kind" >
        </activity>
        <activity
            android:name="com.dawnstep.codemonkey.discovery.newskillget.NewSkillGetActivity"
            android:label="@string/title_activity_new_skill_get" >
        </activity>
        <activity
            android:name="com.dawnstep.codemonkey.discovery.newskillget.NewSkillGetDetailActivity"
            android:label="@string/title_activity_new_skill_get_detail" >
        </activity>
        <activity
            android:name="com.dawnstep.codemonkey.auth.AuthenticationActivity"
            android:label="@string/title_activity_authentication" >
        </activity>
    </application>

</manifest>
